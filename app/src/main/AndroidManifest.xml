<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.expensetracker">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logotracker"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logotracker"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTracker"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity2"
            android:exported="false" />
        <!-- APP LOCK (password screen before entering app) -->
        <activity
            android:name=".AppLockActivity"
            android:exported="false" /> <!-- LOGIN SCREEN -->
        <activity
            android:name=".Login_Register.login"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateVisible" /> <!-- SIGNUP SCREEN -->
        <activity
            android:name=".Login_Register.signup"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateVisible" /> <!-- MAIN APP HOME -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- SEARCH RESULT -->
        <activity
            android:name=".SearchResultActivity"
            android:exported="false" /> <!-- SPLASH SCREEN (Launcher Activity) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>