<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#8692f7"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/title_3"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar" />

    <!-- Selected Date -->
    <TextView
        android:id="@+id/txtViewInterval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Circle + Pie container -->
    <FrameLayout
        android:id="@+id/relLayoutHome"
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtViewInterval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Category ring -->
        <com.example.expensetracker.CircleListView
            android:id="@+id/circle_list_view"
            android:layout_width="match_parent"
            android:layout_height="370dp" />

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center" />


        <!-- ðŸ”¥ FIX: Add popup text view -->
        <TextView
            android:id="@+id/txtViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#8692f7"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="6dp"
            android:elevation="10dp"
            android:visibility="gone"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Expense / Income / Balance Section -->
    <LinearLayout
        android:id="@+id/summaryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relLayoutHome">

        <TextView
            android:id="@+id/txtExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense: 0.00"
            android:textColor="#800000"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/lavender2"
            android:padding="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Income: 0.00"
            android:textAlignment="center"
            android:background="@color/lavender2"
            android:textColor="#000080"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:background="@color/lavender2"
            android:padding="20dp"
            android:text="Balance: 0.00"
            android:textColor="#032254"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
