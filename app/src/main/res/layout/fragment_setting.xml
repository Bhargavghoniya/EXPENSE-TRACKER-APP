<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/topuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, Bhargav Ghoniya"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@color/lavender"
            android:padding="10dp"/>
        <!-- ðŸ”¹ PROFILE SECTION -->
        <TextView
            android:id="@+id/txtProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textStyle="bold"
                android:textColor="@color/lavender" />
        </LinearLayout>

        <!-- ðŸ” SECURITY SECTION -->
        <TextView
            android:id="@+id/txtSecurityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Change PIN -->
        <LinearLayout
            android:id="@+id/rowChangePin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change PIN"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update your 4-digit app lock PIN"
                android:textSize="12sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Fingerprint toggle -->
        <LinearLayout
            android:id="@+id/rowFingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lavender_border">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fingerprint Unlock"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use fingerprint to unlock app"
                    android:textSize="12sp"
                    android:textColor="#777777" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchFingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- ðŸŽ¨ APP PREFERENCES -->
        <TextView
            android:id="@+id/txtPrefsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Preferences"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Dark Mode -->
        <LinearLayout
            android:id="@+id/rowDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- ðŸ“ DATA SECTION -->



        <TextView
            android:id="@+id/txtDataTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- TOTAL SUMMARY -->
        <LinearLayout
            android:id="@+id/layoutSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:id="@+id/txtTotalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income: â‚¹0"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtTotalExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expense: â‚¹0"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtTotalEntries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Entries: 0"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <Button
            android:id="@+id/btnExportPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export My Expenses to PDF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnClearExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All My Expenses"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark" />

        <!-- â„¹ï¸ ABOUT -->
        <TextView
            android:id="@+id/txtAboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer: BhargavGhoniya"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <!-- ðŸšª LOGOUT -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="65dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark" />

    </LinearLayout>
</ScrollView>
